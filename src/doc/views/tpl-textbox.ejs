<div class="panel">
    <a href="javascript:;" class="h2" data-collapse data-target="#texboxPanel">
        <%= __('textbox') %>
        <span class="subtitle"> <%= __('new textbox style') %></span>
    </a>
    <div id="texboxPanel">
        <div class="form row" data-form>
            <div class="col-xs-12 col-sm-6">
                <div data-textbox>
                    <div class="input small left right">
                        <label for="txtReq1"><%=__('label')%></label>
                        <i>@</i>
                        <input type="email" id="txtReq1" name='name' value="" data-validate='required,email'>
                        <a href="javascript:;" class="icon-envelope btn black active"></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div data-textbox>
                    <div class="input left right">
                        <label for="txtReq2"><%=__('label')%></label>
                        <i>@</i>
                        <input type="email" id="txtReq2" name='name' value="" data-validate='required,email'>
                        <a href="javascript:;" class="icon-envelope btn black active"></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div data-textbox>
                    <div class="input large left right">
                        <label for="txtReq3"><%=__('label')%></label>
                        <i>@</i>
                        <input type="email" id="txtReq3" name='name' value="" data-validate='required,email'>
                        <a href="javascript:;" class="icon-envelope btn black active"></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6">
                <div data-textbox>
                    <div class="textarea">
                        <label for="textReq4"><%=__('label')%></label>
                        <textarea name="<%=__('label')%>" id="textReq4" data-validate='required'></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
